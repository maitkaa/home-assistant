generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MeasurePoint {
  BEDROOM
  LIVING_ROOM
  OUTSIDE
}

model Mesurements {
  id           String        @id @default(cuid())
  measurePoint MeasurePoint?
  value        Float
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model ErrorLog {
  id           String        @id @default(cuid())
  message      String
  measurePoint MeasurePoint?
  createdAt    DateTime      @default(now())
}
